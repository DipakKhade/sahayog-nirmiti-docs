generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  name       String?     
  username   String     @unique
  password   String
  type       USER_TYPE
  lastLogin  DateTime?
  vendorCode String?
  docs       Document[]
}

model Document {
  id              Int      @id @default(autoincrement())
  invoiceNo       String
  purchaseOrderNo String
  partNo          String
  partName        String
  documentType    String
  userId          Int
  bucketKey       String
  createdAt       DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

enum USER_TYPE {
  ADMIN
  SUPPLIER
}
